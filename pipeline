pipeline {
    agent any
    stages {
        stage('Cleanup') {
            steps {
                sh 'rm -rf *'
            }
        }
        stage('Clone') {
            steps {
                sh 'git clone https://github.com/nikhilgorantla/busybox-helm.git'
            }
        }
        stage('retag and push') {
            steps {
                sh 'docker build -t avital1093/busybox:latest -t avital1093/busybox:1.${BUILD_NUMBER} ./busybox-helm'
                //sh 'docker pull busybox'
                sh 'docker tag busybox:latest avital1093/busybox:latest'
                //sh 'docker tag busybox:latest avital1093/busybox:1.${BUILD_NUMBER}'
                sh "docker login -u ${DOCKER_USERNAME} -p ${DOCKER_PASSWORD}"
                sh 'docker push avital1093/busybox:latest'
                //sh "docker push avital1093/busybox:1.${BUILD_NUMBER}"
            }
        }
    }
}
